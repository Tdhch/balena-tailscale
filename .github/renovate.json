{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackageNames": ["tailscale/tailscale"],
      "matchBaseBranches": ["main"],
      "versioning": "loose",
      "postUpgradeTasks": {
        "commands": [
          "sed \"s|^version: .*$|version: $(npx -q -y -- semver -c -l {{{newVersion}}})|\" -i balena.yml"
        ],
        "fileFilters": ["balena.yml"],
        "executionMode": "update"
      }
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile.template$"],
      "matchStrings": ["ARG VERSION=(?<currentValue>.*?)\\n"],
      "depNameTemplate": "tailscale/tailscale",
      "datasourceTemplate": "github-tags"
    }
  ]
}
